<div id="wrapper_outter">
  <div id="wrapper_inner">
    <div id="wrapper">
      <div id="container">
        <div id="header">
          <div id="header_left">

            <div id="site_title" align = "left">
              <h1><a href="#"> <img src="/assets/logo.png" alt=""/>  </a></h1>
            </div>
            <div id="menu">
              <ul>
                <li><a href="#" class="current">Home</a></li>
                <li><a href="/clients">Ver Clientes</a></li>
                <li><a href="/clientesExcluidos">Clientes Excluídos</a></li>
              </ul>
            </div>
            <!-- end of menu -->
          </div>
          <!-- end of header left -->
          <div class="cleaner"></div>
        </div>
        <!-- end of header -->
        <div id="content_wrapper">
          <div id="content_outer">
            <div id="content">
              <div class="content_section">



                <h2>Entrar no Sistema</h2>

                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                  <div><%= f.label :email %><br />
                  <%= f.email_field :email %></div>

                  <div><%= f.label :password %><br />
                  <%= f.password_field :password %></div>

                  <% if devise_mapping.rememberable? -%>
                    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                  <% end -%>

                  <div><%= f.submit "Entrar" %></div>
                <% end %>

                <%#= render "devise/shared/links" %>



              </div>               
            </div>
            <!-- end of content -->
            <div id="content_bottom"></div>
            <div class="cleaner"></div>
          </div>
          <!-- end of content_outer -->
          <div id="template_sidebar">
            <div class="sidebar_section">
              <h2>Desenvolvedores</h2>
              <div class="image_wrapper"> <a href="#"><img src="/assets/image_01.jpg" alt="" width="260" height="120" /></a> </div>
              <p>Alexandre Creto, Fernando Lener, Gregori Inagaki, Murilo Travareli e Piergiorgio Lisanti. São os desenvolvedores desse componente. </p>
              <div class="cleaner_h30"></div>
            </div>
          </div>
          <!-- end of template_sidebar -->
          <div class="cleaner"></div>
        </div>
        <!-- end of content_wrapper -->
        <div id="footer">
          Copyright &copy; 2012 <a href="http://mc437.herokuapp.com/">Componente Cliente - MC437</a> | Desenvolvido por Alexandre Creto, Fernando Lener, Gregori Inagaki, Murilo Travareli e Piergiorgio Lisanti.</div>
        <!-- end of footer -->
        <div class="cleaner"></div>
      </div>
    </div>
  </div>
</div>
