<div style="margin-left: 25px;">

<h1> Consultar </h1>
<%= form_for @client, :url => { :action => "searchResult" } do |f| %>

  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field :cpf %>
  </div>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :rg %><br />
    <%= f.text_field :rg %>
  </div>
  <div class="field">
    <%= f.label :nome_pai %><br />
    <%= f.text_field :nome_pai %>
  </div>
  <div class="field">
    <%= f.label :nome_mae %><br />
    <%= f.text_field :nome_mae %>
  </div>
  <div class="field">
    <%= f.label "Local de Nascimento" %><br />
    <%= f.text_field :local_nascimento %>
  </div>
  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Telefone" %><br />
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label "Quantidade de Filhos" %><br />
    <%= f.number_field :quantidade_filhos %>
  </div>
  <div class="field">
    <%= f.label "Religiao" %><br />
    <%= f.collection_select(:religiao_id, Religiao.all, :id, :nome, {:include_blank => true}) %>
  </div>
  <div class="field">
    <%= f.label "Hobby" %><br />
    <%= f.collection_select(:hobby_id, Hobby.all, :id, :nome, {:include_blank => true}) %>
  </div>
  <div class="field">
    <%= f.label "Área de Trabalho" %><br />
    <%= f.collection_select(:trabalho_area_id, TrabalhoArea.all, :id, :area, {:include_blank => true}) %>
  </div>
  <div class="field">
    <%= f.label "Cargo Atual" %><br />
    <%= f.collection_select(:trabalho_cargo_id, TrabalhoCargo.all, :id, :cargo, {:include_blank => true}) %>
  </div>
  <div class="field">
    <%= f.label "Renda Mensal" %><br />
    <%= f.collection_select(:trabalho_renda_id, TrabalhoRenda.all, :id, :renda, {:include_blank => true}) %>
  </div>
  <div class="field">
    <%= f.label "Código de Estado Civil" %><br />
    <%= f.number_field :estado_civil_id %>
  </div>
  <div class="field">
    <%= f.label :observacoes %><br />
    <%= f.text_area :observacoes %>
  </div>
  <div class="actions">
    <%= f.submit "Pesquisar",  :method => :post %>
  </div>
  <% end %>
</div>