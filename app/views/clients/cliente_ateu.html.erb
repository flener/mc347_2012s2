<div style="margin-left: 25px;">

  <h1>Lista de Clientes Estagiários</h1>

<br/>
<%= link_to 'Adicionar Cliente', new_client_path %><br/>
<%= link_to 'Voltar', root_path %>

<br/>

<div align="center">

<table class="tabela" cellpadding="2" cellspacing="1">
  <tr>
    <th><%= "CPF" %></th>
    <th><%= "Nome" %></th>
    <th><%= "RG" %></th>
    <th><%= "Nome do Pai" %></th>
    <th><%= "Nome da Mãe" %></th>
    <th><%= "Data de Nascimento" %></th>
    <th><%= "Local de nascimento" %></th>
    <th><%= "Quantidade de filhos" %></th>
    <th>Editar</th>
    <th>Deletar</th>
  </tr>

<% unless Religiao.first.blank? %>
  <% @clients.each do |client| %>
    <% if client.religiao.nome == "Ateu" %>
        <tr>
          <td><%= link_to client.cpf, client %></td>
          <td><%= client.nome %></td>
          <td><%= client.rg %></td>
          <td><%= client.nome_pai %></td>
          <td><%= client.nome_mae %></td>
          <td align="center"><%= client.data_nascimento.strftime("%d/%m/%y") %></td>
          <td><%= client.local_nascimento %></td>
          <td align="center"><%= client.quantidade_filhos %></td>
          <td align="center"><%= link_to 'Editar', edit_client_path(client) %></td>
          <td align="center"><%= link_to 'Deletar', client, :method => :delete, :data => { :confirm => 'Você tem certeza?' } %></td>
        </tr>
    <% end %>
  <% end %>
<% end %>
</table>

<br />

</div></div>